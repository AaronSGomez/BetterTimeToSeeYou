<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLocation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/teal_200">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coordenadas GPS"
        android:textStyle="bold"
        android:textSize="22sp"
        android:paddingBottom="16dp"/>

    <TextView
        android:id="@+id/tvLatLon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lat: ---\nLon: ---"
        android:textSize="18sp"
        android:paddingBottom="16dp"/>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esperando localizaciÃ³n..."
        android:textSize="16sp"
        android:paddingBottom="16dp"/>
    <!-- MapView de osmdroid (OpenStreetMap)
    - Ocupa todo el ancho
    - Usa weight=1 para crecer ocupando el espacio restante -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>